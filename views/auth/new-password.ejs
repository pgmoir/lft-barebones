<%- include('../includes/head') %>

<%- include('../includes/title', { 
    title: { title: 'New Password' }, 
    breadcrumbs: [ { style: 'home', title: 'Home', url: '/' }, { title: 'New Password' } ]
}) %>

<section id="main" class="container-fluid" aria-label="main body of content plus related links and features">
    <div class="container-lft">
    <div class="row">
            <div class="col-12 col-md-3"></div>
            <div class="col-12 col-md-6 mb-3 d-flex justify-content-center">
                <form class="w-100" action="/new-password" method="POST">
                <% if (typeof error !== 'undefined') { %><%- include('../includes/alert', { alert: error }) %><% } %>
                    <div class="form-group">
                        <label for="password">Password <span aria-hidden="true" role="presentation">(*)</span></label>
                        <input type="password" class="form-control" id="password" name="password" aria-describedby="password">
                    </div>
                    <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                    <input type="hidden" name="userId" value="<%= userId %>">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn btn-primary" type="submit">Update Password</button>
                </form>
            </div>
            <div class="col-12 col-md-3"></div>
        </div>
    </div>
</section>

<%- include('../includes/foot') %>