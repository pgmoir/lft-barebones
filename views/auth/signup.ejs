<%- include('../includes/head') %>

<%- include('../includes/title', { 
    title: { title: 'Sign Up' }, 
    breadcrumbs: [ { style: 'home', title: 'Home', url: '/' }, { title: 'Sign Up' } ]
}) %>

<section id="main" class="container-fluid" aria-label="main body of content plus related links and features">
    <div class="container-lft">
    <p class="lead">If you already have an account, <a href="/login">then login to access your account</a>.</p>
    <div class="row">
            <div class="col-12 col-md-3"></div>
            <div class="col-12 col-md-6 mb-3 d-flex justify-content-center">
                <form class="w-100" action="/signup" method="POST" novalidate>
                <% if (errors.length) { %><%- include('../includes/alert', { alert: { style: 'danger', icon: 'exclamation-triangle', messages: errors.map(e => e.msg) }}) %><% } %>
                    <div class="form-group">
                        <label for="email">Email <span aria-hidden="true" role="presentation">(*)</span></label>
                        <input type="email" class="form-control" id="email" name="email" aria-describedby="email" value="<%= email %>">
                    </div>
                    <div class="form-group">
                        <label for="password">Password <span aria-hidden="true" role="presentation">(*)</span></label>
                        <input type="password" class="form-control" id="password" name="password" aria-describedby="password">
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password <span aria-hidden="true" role="presentation">(*)</span></label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" aria-describedby="confirmPassword">
                    </div>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button class="btn btn-primary" type="submit">Sign Up</button>
                </form>
            </div>
            <div class="col-12 col-md-3"></div>
        </div>
    </div>
</section>

<%- include('../includes/foot') %>