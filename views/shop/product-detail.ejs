<%- include('../includes/head') %>

<%- include('../includes/title', { 
  title: { title: product.title }, 
  breadcrumbs: [ { style: 'home', title: 'Home', url: '/' }, { title: 'Shop', url: '/shop/' }, { title: 'Products', url: '/shop/products' }, { title: product.title } ]
}) %>

<section id="main" class="container-fluid" aria-label="main body of content plus related links and features">
  <div class="container-lft">
    <div class="row d-flex justify-content-start">

      <div class="col-12 col-md-6">
          <article class="card">
              <img class="card-img" src="<%= product.imageUrl %>" alt="<%= product.title %>" role="presentation">
              <div class="card-body">
                  <h3 class="card-title h5"><%= Number(product.price).toFixed(2) %></h3>
                  <p class="card-text"><%= product.description %></p>
                  <%- include('../includes/add-to-cart.ejs') %>
              </div>
          </article>
          </div>

    </div>
  </div>
</section>

<%- include('../includes/foot') %>