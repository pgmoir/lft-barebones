<div class="lft-form-group">
  <fieldset class="lft-fieldset" aria-describedby="<%= field.name %>-hint">
    <legend class="lft-fieldset__legend lft-fieldset__legend--xl">
      <h3 class="lft-fieldset__heading">
        <%= field.question %>
      </h3>
    </legend>
    <span id="<%= field.name %>-hint" class="lft-hint">
      <%= field.hint %>
    </span>
    <% if (field.error) { %>
    <span id="<%= field.name %>-error" class="lft-error-message">
      <span class="lft-visually-hidden">Error:</span> <%= field.error %>
    </span>
    <% } %>
    <div class="lft-radios <% if (field.inline) { %> lft-radios--inline<% } %>">
      <% field.items.forEach(function (item, i) { %>
        <div class="lft-radios__item">
          <input class="lft-radios__input <% if (field.error) { %>lft-input--error<% } %>" id="<%= field.name %>-<%= i %>" name="<%= field.name %>" type="radio" value="<%= item.value %>" <% if (field.required) { %>required="true"<% } %> <% if (item.value == field.formvalue) { %>checked<% } %>>
          <label class="lft-label lft-radios__label" for="<%= field.name %>-<%= i %>">
          <%= item.title %>
          </label>
        </div>
      <% }) %>
    </div>
  </fieldset>
</div>