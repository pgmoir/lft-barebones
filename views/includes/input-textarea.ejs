<div class="lft-form-group">
  <legend class="lft-fieldset__legend lft-fieldset__legend--xl">
    <h3 class="lft-fieldset__heading">
      <%= field.question %>
    </h3>
  </legend>
  <label class="lft-label" for="more-detail">
    <%= field.label %>
  </label>
  <span id="more-detail-hint" class="lft-hint">
      <%= field.hint %>
  </span>
  <span id="<%= field.name %>-error" class="lft-error-message">
    <span class="lft-visually-hidden">Error:</span> <%= field.error %>
  </span>
  <textarea class="lft-textarea <% if (field.error) { %>lft-textarea--error<% } %>" id="more-detail" name="<%= field.name %>" rows="5" aria-describedby="more-detail-hint" <% if (field.required) { %>required<% } %>><%= field.formvalue %></textarea>
</div>