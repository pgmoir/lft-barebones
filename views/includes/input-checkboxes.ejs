<div class="lft-form-group">
  <fieldset class="lft-fieldset" aria-describedby="<%= field.name %>-hint">
    <legend class="lft-fieldset__legend lft-fieldset__legend--xl">
      <h3 class="lft-fieldset__heading">
        <%= field.question %>
      </h3>
    </legend>
    <span id="<%= field.name %>-hint" class="lft-hint">
      <%= field.hint %>
    </span>
    <div class="lft-checkboxes">
      <% field.items.forEach(function (item, i) { %>
      <div class="lft-checkboxes__item">
        <input class="lft-checkboxes__input" id="<%= item.name %>" name="<%= field.name %>" type="checkbox" value="<%= item.value %>">
        <label class="lft-label lft-checkboxes__label" for="<%= item.name %>">
        <%= item.title %>
        </label>
      </div>
      <% }) %>
    </div>
  </fieldset>
</div>

<div class="lft-form-group">
  <fieldset class="lft-fieldset" aria-describedby="e<%= field.name %>-hint">
    <legend class="lft-fieldset__legend lft-fieldset__legend--xl">
      <h3 class="lft-fieldset__heading">
        <%= field.question %>
      </h3>
    </legend>
    <span id="e<%= field.name %>-hint" class="lft-hint">
      <%= field.hint %>
    </span>
    <span id="e<%= field.name %>-error" class="lft-error-message">
      <span class="lft-visually-hidden">Error:</span> <%= field.error %>
    </span>
    <div class="lft-checkboxes">
      <% field.items.forEach(function (item, i) { %>
      <div class="lft-checkboxes__item">
        <input class="lft-checkboxes__input lft-input--error" id="e<%= item.name %>" name="e<%= field.name %>" type="checkbox" value="<%= item.value %>">
        <label class="lft-label lft-checkboxes__label" for="e<%= item.name %>">
        <%= item.title %>
        </label>
      </div>
      <% }) %>
    </div>
  </fieldset>
</div>